@model PersonAndAccount
@await Html.PartialAsync("header")
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Đăng ký</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        html, body {
            height: 100%;
            width: 100%;
            display: grid;
            place-items: center;
            background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('/pictures/hotel2.jpg') no-repeat center center/cover;
        }

        ::selection {
            background: #c29d5a;
            color: #fff;
        }

        .signup-container {
            max-width: 420px;
            padding: 40px 35px;
            background: rgba(255, 255, 255, 0.08);
            border-radius: 20px;
            box-shadow: 0 12px 32px rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            color: #fff;
            border: 1px solid rgba(255,255,255,0.2);
        }

        .signup-header {
            text-align: center;
            margin-bottom: 25px;
        }

        .signup-title {
            font-size: 2rem;
            font-weight: 700;
            color: #f6e27a;
        }

        .signup-form {
            display: flex;
            flex-direction: column;
            gap: 18px;
        }

        .form-group {
            display: flex;
            flex-direction: column;
        }

        .form-input, .form-select {
            padding: 12px 16px;
            font-size: 1rem;
            border: 1px solid rgba(255,255,255,0.2);
            border-radius: 10px;
            background-color: rgba(255,255,255,0.05);
            color: #fff;
            transition: 0.3s;
        }

            .form-input:focus,
            .form-select:focus {
                border-color: #f6e27a;
                outline: none;
            }

            .form-input::placeholder {
                color: #ccc;
            }

        .form-button {
            background: linear-gradient(to right, #c29d5a, #f6e27a);
            color: #000;
            padding: 12px 0;
            font-size: 1rem;
            border: none;
            border-radius: 30px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .form-button:hover {
                background: linear-gradient(to right, #f6e27a, #c29d5a);
                transform: scale(1.02);
            }

        .form-links {
            text-align: center;
            font-size: 0.95rem;
            margin-top: 10px;
        }

            .form-links a {
                color: #f6e27a;
                text-decoration: none;
                font-weight: 500;
                transition: 0.3s;
            }

                .form-links a:hover {
                    color: #c29d5a;
                    text-decoration: underline;
                }

        .validation-message {
            max-width: 420px;
            margin: 0 auto 10px;
            color: red;
            text-align: center;
        }
    </style>
</head>
<body>

    <div asp-validation-summary="All" class="validation-message"></div>

    <div class="signup-container">
        <div class="signup-header">
            <h2 class="signup-title">Đăng ký</h2>
        </div>

        <form class="signup-form" method="post">
            <div class="form-group">
                <input asp-for="p.PersonId" type="text" placeholder="CCCD" class="form-input" />
            </div>

            <div class="form-group">
                <input asp-for="p.HoTen" type="text" placeholder="Họ và tên" class="form-input" />
            </div>

            <div class="form-group">
                <input asp-for="p.Tuoi" type="number" placeholder="Tuổi" class="form-input" />
            </div>

            <div class="form-group">
                <select asp-for="p.GioiTinh" class="form-select">
                    <option value="0">Nam</option>
                    <option value="1">Nữ</option>
                </select>
            </div>

            <div class="form-group">
                <input asp-for="p.Sdt" type="text" placeholder="Số điện thoại" class="form-input" />
            </div>

            <div class="form-group">
                <input asp-for="a.UserName" type="text" placeholder="Email Address" class="form-input" required />
            </div>

            <div class="form-group">
                <input asp-for="a.Password" type="password" placeholder="Password" class="form-input" required />
            </div>

            <div class="form-group">
                <input asp-for="confirm" type="password" placeholder="Confirm password" class="form-input" required />
            </div>

            <div class="form-group">
                <input type="submit" value="Đăng ký" class="form-button" />
            </div>
        </form>

        <div class="form-links">
            <p><a asp-controller="login" asp-action="Index">Quay lại đăng nhập</a></p>
            <p><a href="/home/index">Quay lại màn hình chính</a></p>
        </div>
    </div>

</body>
</html>
